<%- include('../partials/header') %>
<table id="list">
  <thead>
      <a href='/new'>Add a flight</a>
    <tr>
      <th>Airline</th>
      <th>Flight<br>No.</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(m) { %>
      <tr>
        <td><%= m.airline %></td>
        <td><%= m.flightNo %></td>
        <td><%= m.airport %></td>
        <td><%= m.departs %></td>
        <td><a href="/movies/<%= m._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>